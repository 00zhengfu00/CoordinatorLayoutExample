<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <Button
        android:id="@+id/btn_recycler_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="ToolBar Snap"/>

    <Button
        android:id="@+id/btn_toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="toolBar的收缩与扩展"/>

    <Button
        android:id="@+id/btn_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="ViewPager特效"/>

    <Button
        android:id="@+id/btn_parallax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="ViewPager视觉特差效果 "/>


    <Button
        android:id="@+id/btn_parallax_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="ViewPager视觉特差效果Snap "/>

</LinearLayout>
